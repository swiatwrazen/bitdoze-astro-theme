---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

export interface Props {
  tags?: string[];
  postsPerTag?: number;
}

const {
  tags = ["Jamstack", "astro", "carrd"],
  postsPerTag = 5,
} = Astro.props;

const allPosts = await getCollection("posts");
const sortedPosts = allPosts.sort((a, b) => {
  const dateA = new Date(a.data.date || "");
  const dateB = new Date(b.data.date || "");
  return dateB.getTime() - dateA.getTime();
});

const slugify = (text: string): string =>
  text
    .toString()
    .toLowerCase()
    .trim()
    .replace(/\s+/g, "-")
    .replace(/[^\w\-]+/g, "")
    .replace(/\-\-+/g, "-");

const tagPosts = tags.map((tag) => ({
  tag,
  posts: sortedPosts
    .filter((post) => post.data.tags?.map((t: string) => slugify(t)).includes(slugify(tag)))
    .slice(0, postsPerTag),
}));
---

<div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
  {
    tagPosts.map(({ tag, posts }) => (
      <div class="flex h-full flex-col rounded-3xl bg-white p-6 shadow-xl ring-1 ring-brand-blue/10">
        <div class="flex items-center justify-between">
          <h3 class="text-2xl font-semibold text-brand-blue capitalize">{tag}</h3>
          <span class="inline-flex items-center rounded-full bg-brand-blue/10 px-3 py-1 text-sm font-semibold text-brand-blue">
            {posts.length}
          </span>
        </div>
        <div class="mt-6 flex-1 space-y-4">
          {posts.map((post) => (
            <a
              href={`/${post.slug}/`}
              class="flex gap-4 rounded-2xl border border-brand-blue/10 p-4 transition hover:border-brand-blue/40 hover:bg-brand-blue/5"
            >
              <div class="relative h-16 w-24 overflow-hidden rounded-xl bg-brand-blue/10">
                {post.data.image && (
                  <Image
                    src={post.data.image}
                    alt={post.data.title}
                    width={120}
                    height={80}
                    class="h-full w-full object-cover"
                  />
                )}
              </div>
              <div class="flex flex-col">
                <p class="line-clamp-2 text-sm font-semibold text-gray-800">
                  {post.data.title}
                </p>
                {post.data.date && (
                  <span class="mt-2 text-xs text-gray-500">
                    {new Date(post.data.date).toLocaleDateString("pl-PL")}
                  </span>
                )}
              </div>
            </a>
          ))}
        </div>
        <div class="mt-6 pt-4">
          <a
            href={`/tags/${slugify(tag)}/`}
            class="inline-flex items-center gap-2 font-semibold text-brand-blue hover:underline"
          >
            Wiecej artykulow
            <svg class="size-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 0 1 0-1.414L10.586 10 7.293 6.707a1 1 0 0 1 1.414-1.414l4 4a1 1 0 0 1 0 1.414l-4 4a1 1 0 0 1-1.414 0Z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
    ))
  }
</div>
