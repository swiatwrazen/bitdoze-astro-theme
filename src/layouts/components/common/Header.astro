---
import ThemeToggle from "./ThemeToggle.astro";
import menu from "@config/menu.json";
import { company } from "@config/company";

const normalize = (value: string | undefined | null) => {
  if (!value) return null;
  if (value === "/") return "/";
  return value.endsWith("/") ? value.slice(0, -1) : value;
};

const currentPath = normalize(Astro.url.pathname);
const mainMenu = (menu.main ?? []).map((item, index) => {
  const normalizedUrl = normalize(item.url);
  const children = (item.children ?? []).map((child, childIndex) => ({
    ...child,
    normalizedUrl: normalize(child.url),
    id: `submenu-${index}-${childIndex}`,
  }));

  return {
    highlighted: false,
    ...item,
    normalizedUrl,
    children,
    id: item.hasChildren ? `menu-${index}` : undefined,
  };
});

const brandParts = company.name.split(" ").filter(Boolean);
const brandPrimary = brandParts[0] ?? "Brand";
const brandSecondary = brandParts.slice(1).join(" ");

const navLinkBase = "inline-flex items-center gap-1 rounded-full px-3 py-2 text-base font-semibold text-brand-navy transition hover:text-brand-blue";

const linkClasses = (item) => {
  const classes = [navLinkBase];
  if (item.highlighted) classes.push("menu-item-highlighted");
  if (item.normalizedUrl && item.normalizedUrl === currentPath) classes.push("menu-item-active");
  return classes.join(" ");
};

const childLinkClasses = (child) => {
  const classes = ["block rounded-lg px-3 py-2 text-sm font-medium text-brand-navy/80 transition hover:bg-brand-blue/5 hover:text-brand-blue"];
  if (child.normalizedUrl && child.normalizedUrl === currentPath) {
    classes.push("text-brand-blue", "font-semibold");
  }
  return classes.join(" ");
};
---

<header class="sticky top-0 z-40 border-b border-gray-200 bg-white/90 backdrop-blur">
  <div class="container py-4">
    <nav class="flex items-center justify-between gap-4" aria-label="Global navigation">
      <a href="/" class="-m-1.5 p-1.5" aria-label={company.name}>
        <p class="text-3xl font-black text-brand-blue">
          {brandPrimary}
          {brandSecondary && (
            <span class="ml-2 inline-flex rounded-lg bg-brand-yellow/20 px-3 text-brand-navy">{brandSecondary}</span>
          )}
        </p>
      </a>
      <div class="flex items-center gap-3 lg:hidden">
        <ThemeToggle id="themeToggle-mobile" />
        <button
          type="button"
          class="inline-flex items-center justify-center rounded-md p-2.5 text-brand-blue transition hover:bg-brand-blue/10"
          aria-expanded="false"
          aria-controls="mobile-nav"
          data-mobile-nav-toggle
        >
          <span class="sr-only">Open main menu</span>
          <svg class="size-8" viewBox="0 0 24 24" fill="none" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
          </svg>
        </button>
      </div>
      <div class="hidden lg:flex lg:items-center lg:gap-8">
        {
          mainMenu.map((item) => (
            item.hasChildren ? (
              <div class="relative group">
                <button
                  type="button"
                  class={`${linkClasses(item)} pr-2`}
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  {item.name}
                  <svg class="size-4 text-brand-blue transition group-hover:rotate-180" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 0 1 1.06.02L10 10.94l3.71-3.71a.75.75 0 1 1 1.06 1.06l-4.24 4.25a.75.75 0 0 1-1.06 0L5.21 8.29a.75.75 0 0 1 .02-1.08Z" clip-rule="evenodd"></path>
                  </svg>
                </button>
                <div class="invisible absolute left-0 top-full z-30 mt-3 w-56 -translate-y-2 rounded-2xl border border-gray-200 bg-white p-4 opacity-0 shadow-lg transition group-hover:visible group-hover:translate-y-0 group-hover:opacity-100">
                  {
                    item.children.map((child) => (
                      <a href={child.url} class={childLinkClasses(child)}>
                        {child.name}
                      </a>
                    ))
                  }
                </div>
              </div>
            ) : (
              <a href={item.url} class={linkClasses(item)}>
                {item.name}
              </a>
            )
          ))
        }
        <a href="/search/" class="inline-flex items-center gap-2 rounded-full px-3 py-2 text-base font-semibold text-brand-navy transition hover:bg-brand-blue/10 hover:text-brand-blue">
          Search
          <svg class="size-4" viewBox="0 0 24 24" fill="none" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-4.35-4.35m0 0A7.5 7.5 0 1 0 5 5a7.5 7.5 0 0 0 11.65 11.65Z"></path>
          </svg>
        </a>
        <ThemeToggle id="themeToggle-desktop" />
      </div>
    </nav>
  </div>

  <div class="fixed inset-x-0 top-0 z-50 hidden min-h-screen overflow-y-auto bg-white px-8 py-6" id="mobile-nav" data-mobile-nav-panel>
    <div class="flex items-center justify-between">
      <a href="/" class="-m-1.5 p-1.5" aria-label={company.name}>
        <p class="text-3xl font-black text-brand-blue">
          {brandPrimary}
          {brandSecondary && (
            <span class="ml-2 inline-flex rounded-lg bg-brand-yellow/20 px-3 text-brand-navy">{brandSecondary}</span>
          )}
        </p>
      </a>
      <button type="button" class="inline-flex items-center justify-center rounded-md p-2.5 text-brand-yellow transition hover:bg-brand-yellow/10" data-mobile-nav-close aria-label="Close menu">
        <svg class="size-8" viewBox="0 0 24 24" fill="none" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <div class="mt-10 space-y-4">
      {
        mainMenu.map((item) => (
          item.hasChildren ? (
            <div class="border-b border-gray-200 pb-4">
              <button
                type="button"
                class="flex w-full items-center justify-between rounded-full px-4 py-3 text-left text-xl font-semibold text-brand-navy transition hover:bg-brand-blue/10 hover:text-brand-blue"
                data-mobile-nav-parent
                data-target={item.id}
                aria-expanded="false"
              >
                {item.name}
                <svg class="size-6 transition" viewBox="0 0 24 24" fill="none" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m6 9 6 6 6-6"></path>
                </svg>
              </button>
              <div id={item.id} class="mt-4 hidden space-y-2">
                {
                  item.children.map((child) => (
                    <a href={child.url} class="block rounded-xl px-4 py-3 text-lg font-medium text-brand-navy/80 transition hover:bg-brand-blue/10 hover:text-brand-blue">
                      {child.name}
                    </a>
                  ))
                }
              </div>
            </div>
          ) : (
            <a
              href={item.url}
              class="block rounded-full px-4 py-3 text-center text-2xl font-semibold text-brand-navy transition hover:bg-brand-blue/10 hover:text-brand-blue"
            >
              {item.name}
            </a>
          )
        ))
      }
      <a href="/search/" class="block rounded-full px-4 py-3 text-center text-2xl font-semibold text-brand-navy transition hover:bg-brand-blue/10 hover:text-brand-blue">
        Search
      </a>
      <div class="flex justify-center">
        <ThemeToggle id="themeToggle-mobile-panel" />
      </div>
    </div>
  </div>
</header>

<script>
  const setupNavigation = () => {
    const toggle = document.querySelector("[data-mobile-nav-toggle]");
    const panel = document.querySelector("[data-mobile-nav-panel]");
    const closeButtons = document.querySelectorAll("[data-mobile-nav-close]");

    const setOpen = (open) => {
      if (!panel || !toggle) return;
      panel.classList.toggle("hidden", !open);
      document.body.classList.toggle("overflow-hidden", open);
      toggle.setAttribute("aria-expanded", String(open));
    };

    toggle?.addEventListener("click", () => {
      const isHidden = panel?.classList.contains("hidden");
      setOpen(Boolean(isHidden));
    });

    closeButtons.forEach((button) => {
      button.addEventListener("click", () => setOpen(false));
    });

    const submenuButtons = document.querySelectorAll("[data-mobile-nav-parent]");
    submenuButtons.forEach((button) => {
      const targetId = button.getAttribute("data-target");
      if (!targetId) return;
      const target = document.getElementById(targetId);
      if (!target) return;
      button.addEventListener("click", () => {
        const expanded = button.getAttribute("aria-expanded") === "true";
        button.setAttribute("aria-expanded", String(!expanded));
        button.querySelector("svg")?.classList.toggle("-rotate-180", !expanded);
        target.classList.toggle("hidden", expanded);
      });
    });

    window.addEventListener("resize", () => {
      if (window.innerWidth >= 1024) setOpen(false);
    });
  };

  const initNavigation = () => {
    setupNavigation();
  };

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initNavigation, { once: true });
  } else {
    initNavigation();
  }

  window.removeEventListener("astro:page-load", initNavigation);
  window.addEventListener("astro:page-load", initNavigation);
</script>
